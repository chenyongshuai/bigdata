hive>select current_database();

hive>create database test;

加载数据 :LOAD DATA LOCAL INPATH '/path/to/local/files' OVERWRITE  INTO TABLE test

create table t_sr(
d int ,
nm varchar(32),
sx varchar(5)
) stored as orc;

create table t_bk4(
d int ,
nm varchar(32),
thr varchar(30)
) stored as orc;

create table t_book(
id int ,
name varchar(32),
author varchar(30)
);

create table t_user(
id int ,
name varchar(32),
sex varchar(5),
birth date,
deptid int
);

create table t_dept(
deptid int,
deptname varchar(32),
deptlocal varchar(32)
);

create table t_vol(
id int,
vol decimal
);

create table t_person(
id int ,
name varchar(32),
sex varchar(5),
birth date
);

create table t_prsn(
d int ,
nm varchar(32),
sx varchar(5),
brth date
)stored as orc;

修改linux系统时间：date -s "YYYY-MM-DD  hh:mm:ss" &&hwclock --systohc

select t2.deptname,sum(t3.vol) amount from t_user t1 left join t_dept t2 on t1.deptid=t2.deptid left join t_vol t3 on t1.id = t3.id group by t2.deptname;

